journal = {Forest Ecology and Management},
keywords = {Hierarchical clustering,International trade,Invasive Alien Species (IAS),Invertebrates,Microorganisms,Plantwise Knowledge Bank},
pages = {103--111},
title = {{Likelihood of establishment of tree pests and diseases based on their worldwide occurrence as determined by hierarchical cluster analysis}},
