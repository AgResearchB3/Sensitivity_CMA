isbn = {1366-9516},
issn = {13669516},
journal = {Diversity and Distributions},
keywords = {Biosecurity,Climate change,Host plant,Insects,Propagule pressure,Quarantine pests},
number = {1},
pages = {84--94},
title = {{Quarantine arthropod invasions in Europe: The role of climate, hosts and propagule pressure}},
